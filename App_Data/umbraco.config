          <umbBlogPost id="1276" parentID="1355" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-05-17T15:34:01" updateDate="2013-05-20T09:18:21" nodeName="Developing a wet weather setup" urlName="developing-a-wet-weather-setup" writerName="Rob" creatorName="Rob" path="-1,1057,1083,1354,1355,1276" isDoc="">
