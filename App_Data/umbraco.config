      <DateFolder id="1234" parentID="1190" level="3" writerID="0" creatorID="0" nodeType="1054" template="1045" sortOrder="3" createDate="2013-05-02T12:45:09" updateDate="2013-05-20T08:12:31" nodeName="5" urlName="5" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1234" isDoc="">
