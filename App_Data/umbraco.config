          <umbBlogPost id="1277" parentID="1346" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-05-17T15:34:49" updateDate="2013-05-20T09:19:17" nodeName="Getting started with F1 2012 Telemetry" urlName="getting-started-with-f1-2012-telemetry" writerName="Rob" creatorName="Rob" path="-1,1057,1083,1172,1346,1277" isDoc="">
