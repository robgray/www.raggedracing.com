          <umbBlogPost id="1527" parentID="1530" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-06-26T17:15:59" updateDate="2013-06-26T17:50:04" nodeName="GT Challenge week 8 Road America" urlName="gt-challenge-week-8-road-america" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1505,1530,1527" isDoc="">
