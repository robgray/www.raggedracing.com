      <Racer id="1503" parentID="1248" level="3" writerID="0" creatorID="0" nodeType="1247" template="0" sortOrder="8" createDate="2013-06-02T15:49:44" updateDate="2013-06-02T15:51:21" nodeName="Diego Rancaño Boudon" urlName="diego-rancaño-boudon" writerName="Rob" creatorName="Rob" path="-1,1057,1248,1503" isDoc="">
