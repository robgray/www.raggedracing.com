          <umbBlogPost id="1587" parentID="1588" level="5" writerID="1" creatorID="1" nodeType="1053" template="1046" sortOrder="1" createDate="2013-07-19T08:07:35" updateDate="2013-07-19T08:08:58" nodeName="Latest iRacing build details are out" urlName="latest-iracing-build-details-are-out" writerName="Admin" creatorName="Admin" path="-1,1057,1190,1543,1588,1587" isDoc="">
