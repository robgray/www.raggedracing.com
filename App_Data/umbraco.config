          <umbBlogPost id="1497" parentID="1499" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-05-28T12:00:19" updateDate="2013-06-25T17:22:07" nodeName="GT Challenge at Sebring" urlName="gt-challenge-at-sebring" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1234,1499,1497" isDoc="">
