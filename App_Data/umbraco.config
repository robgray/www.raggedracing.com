          <umbBlogPost id="1095" parentID="1104" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2012-08-21T20:42:45" updateDate="2013-05-20T08:12:24" nodeName="Season 3 2012 week 2 in review" urlName="season-3-2012-week-2-in-review" writerName="Rob" creatorName="Rob" path="-1,1057,1083,1084,1104,1095" isDoc="">
