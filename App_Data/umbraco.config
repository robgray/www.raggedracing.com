        <DateFolder id="1235" parentID="1234" level="4" writerID="0" creatorID="0" nodeType="1054" template="1045" sortOrder="1" createDate="2013-05-02T12:45:10" updateDate="2013-05-20T08:12:31" nodeName="2" urlName="2" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1234,1235" isDoc="">
          <umbracoNaviHide>1</umbracoNaviHide>
          <umbBlogPost id="1233" parentID="1235" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-05-02T12:33:43" updateDate="2013-06-25T17:22:44" nodeName="My Racecraft for season 2 2013" urlName="my-racecraft-for-season-2-2013" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1234,1235,1233" isDoc="">
