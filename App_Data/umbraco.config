          <umbBlogPost id="1559" parentID="1565" level="5" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2013-07-16T07:18:34" updateDate="2013-07-16T11:41:16" nodeName="GT Challenge last race at Road Atlanta" urlName="gt-challenge-last-race-at-road-atlanta" writerName="Rob" creatorName="Rob" path="-1,1057,1190,1543,1565,1559" isDoc="">
